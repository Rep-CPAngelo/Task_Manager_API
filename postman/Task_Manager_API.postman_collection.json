{
  "info": {
    "name": "Task Manager API",
    "description": "Postman collection for Task Manager API endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "host_url", "value": "http://localhost:3000", "type": "string" },
    { "key": "base_url", "value": "{{host_url}}/api", "type": "string" },
    { "key": "token", "value": "", "type": "string" },
    { "key": "user_id", "value": "", "type": "string" }
  ],
  "item": [
    {
      "name": "Root",
      "item": [
        {
          "name": "GET /",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" }
            ],
            "url": {
              "raw": "{{host_url}}/",
              "host": ["{{host_url}}"],
              "path": [""]
            }
          }
        }
      ]
    },
    {
      "name": "Health",
      "item": [
        {
          "name": "GET /api/health",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "GET /api/health/status",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/health/status",
              "host": ["{{base_url}}"],
              "path": ["health", "status"]
            }
          }
        },
        {
          "name": "GET /api/health/system",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/health/system",
              "host": ["{{base_url}}"],
              "path": ["health", "system"]
            }
          }
        },
        {
          "name": "GET /api/health/database",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/health/database",
              "host": ["{{base_url}}"],
              "path": ["health", "database"]
            }
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "POST /api/auth/register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Jane Doe\",\n  \"email\": \"jane.doe@example.com\",\n  \"password\": \"Password@123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "POST /api/auth/login",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "try {",
                  "  const json = pm.response.json();",
                  "  const token = json && json.data && json.data.token;",
                  "  if (token) {",
                  "    pm.collectionVariables.set('token', token);",
                  "  }",
                  "} catch (e) { /* ignore */ }"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"Admin@123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "GET /api/auth/profile",
          "request": {
            "method": "GET",
            "header": [
              { "key": "x-auth-token", "value": "{{token}}" },
              { "key": "Accept", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["auth", "profile"]
            }
          }
        },
        {
          "name": "PUT /api/auth/profile",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "x-auth-token", "value": "{{token}}" },
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"email\": \"updated.email@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["auth", "profile"]
            }
          }
        },
        {
          "name": "PUT /api/auth/change-password",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "x-auth-token", "value": "{{token}}" },
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"Admin@123456\",\n  \"newPassword\": \"NewPass@123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/change-password",
              "host": ["{{base_url}}"],
              "path": ["auth", "change-password"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "GET /api/users",
          "request": {
            "method": "GET",
            "header": [
              { "key": "x-auth-token", "value": "{{token}}" },
              { "key": "Accept", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/users",
              "host": ["{{base_url}}"],
              "path": ["users"]
            }
          }
        },
        {
          "name": "GET /api/users/search",
          "request": {
            "method": "GET",
            "header": [
              { "key": "x-auth-token", "value": "{{token}}" },
              { "key": "Accept", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/users/search?query=jane&page=1&limit=10&role=user",
              "host": ["{{base_url}}"],
              "path": ["users", "search"],
              "query": [
                { "key": "query", "value": "jane" },
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" },
                { "key": "role", "value": "user" }
              ]
            }
          }
        },
        {
          "name": "GET /api/users/stats",
          "request": {
            "method": "GET",
            "header": [
              { "key": "x-auth-token", "value": "{{token}}" },
              { "key": "Accept", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/users/stats",
              "host": ["{{base_url}}"],
              "path": ["users", "stats"]
            }
          }
        },
        {
          "name": "GET /api/users/:id",
          "request": {
            "method": "GET",
            "header": [
              { "key": "x-auth-token", "value": "{{token}}" },
              { "key": "Accept", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["users", "{{user_id}}"]
            }
          }
        },
        {
          "name": "POST /api/users",
          "request": {
            "method": "POST",
            "header": [
              { "key": "x-auth-token", "value": "{{token}}" },
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Sample User\",\n  \"email\": \"sample.user@example.com\",\n  \"password\": \"Password@123\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users",
              "host": ["{{base_url}}"],
              "path": ["users"]
            }
          }
        },
        {
          "name": "PUT /api/users/:id",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "x-auth-token", "value": "{{token}}" },
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated User\",\n  \"email\": \"updated.user@example.com\",\n  \"role\": \"admin\",\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["users", "{{user_id}}"]
            }
          }
        },
        {
          "name": "DELETE /api/users/:id",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "x-auth-token", "value": "{{token}}" },
              { "key": "Accept", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["users", "{{user_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "POST /api/tasks",
          "request": {
            "method": "POST",
            "header": [
              { "key": "x-auth-token", "value": "{{token}}" },
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Draft roadmap\",\n  \"description\": \"Write initial roadmap doc\",\n  \"priority\": \"high\",\n  \"dueDate\": \"2030-01-01T00:00:00.000Z\",\n  \"labels\": [\"planning\", \"docs\"]\n}"
            },
            "url": { "raw": "{{base_url}}/tasks", "host": ["{{base_url}}"], "path": ["tasks"] }
          }
        },
        {
          "name": "GET /api/tasks",
          "request": {
            "method": "GET",
            "header": [ { "key": "x-auth-token", "value": "{{token}}" } ],
            "url": {
              "raw": "{{base_url}}/tasks?page=1&limit=10&status=pending&priority=high&q=roadmap",
              "host": ["{{base_url}}"],
              "path": ["tasks"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" },
                { "key": "status", "value": "pending" },
                { "key": "priority", "value": "high" },
                { "key": "q", "value": "roadmap" }
              ]
            }
          }
        },
        {
          "name": "GET /api/tasks/:id",
          "request": {
            "method": "GET",
            "header": [ { "key": "x-auth-token", "value": "{{token}}" } ],
            "url": { "raw": "{{base_url}}/tasks/{{task_id}}", "host": ["{{base_url}}"], "path": ["tasks", "{{task_id}}"] }
          }
        },
        {
          "name": "PATCH /api/tasks/:id",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "x-auth-token", "value": "{{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Draft roadmap v2\",\n  \"priority\": \"medium\"\n}"
            },
            "url": { "raw": "{{base_url}}/tasks/{{task_id}}", "host": ["{{base_url}}"], "path": ["tasks", "{{task_id}}"] }
          }
        },
        {
          "name": "PATCH /api/tasks/:id/status",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "x-auth-token", "value": "{{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"status\": \"in-progress\"\n}" },
            "url": { "raw": "{{base_url}}/tasks/{{task_id}}/status", "host": ["{{base_url}}"], "path": ["tasks", "{{task_id}}", "status"] }
          }
        },
        {
          "name": "DELETE /api/tasks/:id",
          "request": {
            "method": "DELETE",
            "header": [ { "key": "x-auth-token", "value": "{{token}}" } ],
            "url": { "raw": "{{base_url}}/tasks/{{task_id}}", "host": ["{{base_url}}"], "path": ["tasks", "{{task_id}}"] }
          }
        }
      ]
    }
  ]
}


