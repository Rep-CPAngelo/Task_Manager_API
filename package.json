{
  "name": "task_manager",
  "version": "1.0.0",
  "description": "A Node.js + Express.js boilerplate with modern structure and best practices",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node scripts/seedDatabase.js",
    "seed:reset": "node scripts/seedDatabase.js --reset",
    "test": "jest --detectOpenHandles --forceExit",
    "test:unit": "jest tests/unit --detectOpenHandles --forceExit",
    "test:integration": "jest tests/integration --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "perf:setup": "node performance/setup-test-data.js",
    "perf:benchmark": "node performance/database-benchmark.js",
    "perf:comprehensive": "node performance/comprehensive-test.js",
    "perf:load": "artillery run performance/artillery-config.yml",
    "perf:quick": "autocannon -c 10 -d 30 http://localhost:3000/api/health",
    "perf:all": "npm run perf:setup && npm run perf:benchmark && npm run perf:comprehensive"
  },
  "keywords": [
    "nodejs",
    "express",
    "boilerplate",
    "api",
    "rest",
    "mongodb"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.6",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "artillery": "^2.0.26",
    "autocannon": "^8.0.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.0.2",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
